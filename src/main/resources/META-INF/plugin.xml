<idea-plugin>
  <id>com.sourcegraph.jetbrains</id>
  <name>Sourcegraph</name>
  <vendor email="hi@sourcegraph.com" url="https://sourcegraph.com">Sourcegraph</vendor>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <notificationGroup id="Sourcegraph" displayType="BALLOON"/>
    <projectService id="SourcegraphWindowService" serviceImplementation="com.sourcegraph.SourcegraphWindowService"/>
    <toolWindow id="Sourcegraph" anchor="right" factoryClass="com.sourcegraph.WindowFactory" icon="/icons/icon.png" />
  </extensions>

  <actions>
    <action id="OpenSourcegraphSearchBarAction" class="com.sourcegraph.OpenSourcegraphSearchBarAction" text="Search in Sourcegraph">
      <keyboard-shortcut first-keystroke="alt A" keymap="$default"/>
    </action>
  </actions>

</idea-plugin>
